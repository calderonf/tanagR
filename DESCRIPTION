Package: tanagR
Type: Package
Title: Tanager-Inspired Color Palettes
Version: 0.1.0
Authors@R: c(person("Daniel", "Cadena", role = c("aut"),
             email = "ccadena@uniandes.edu.co"),
             person("Felipe", "Zapata", role = c("aut", "cre"),
